@model Recipyyy.Models.Cuisine

@{
    ViewBag.Title = "Create";
}




@using (Html.BeginForm("Create", "Cuisines", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal container col-md-8">
        <h3 class="pt-4">Add Cuisine</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
        
            @Html.LabelFor(model => model.cuisineName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.cuisineName, new { htmlAttributes = new { @class = "form-control" , required = "required"} })
                @Html.ValidationMessageFor(model => model.cuisineName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cuisineDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.cuisineDescription, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.cuisineDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cuisineImagePath, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.ValidationMessageFor(model => model.cuisineImagePath, "", new { @class = "text-danger" })
                <input class="custom-file-input" type="file" name="cuisineImageFile"/>
                <label class="custom-file-label mx-3" for="customFile">Choose file</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Create" class="btn btn-outline-primary btn-block" />
            </div>
        </div>

        <div class="pl-3 pb-3">
            @Html.ActionLink("Back", "Index",null ,new { @class="btn btn-secondary"})
        </div>
    </div>

  
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
