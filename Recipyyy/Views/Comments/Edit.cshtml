@model Recipyyy.Models.Comment

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal justify-content-center col-md-8" style="margin:auto">
        <h4>Edit Comment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.commentId)

        <div class="form-group">
            <label>Your Comment</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.commentText, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.commentText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-none">
            <div class="col-md-10">
                @Html.EditorFor(model => model.recipeId, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group d-none">
            <div class="col-md-10">
                @Html.EditorFor(model => model.chefId, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Save" class="btn btn-primary mx-2" />
                @Html.ActionLink("Cancel", "Details", "Recipes", new { @id = ViewBag.backTo }, new { @class = "btn btn-outline-secondary mx-2" })
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
