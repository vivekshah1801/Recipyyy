<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
   
    <!-- November Edit-->
    @Styles.Render("~/Content/customCss")
    @*@Styles.Render("~/Content/css")*@

    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="blue-skin">

    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader"></div>

    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <div id="main-wrapper">

        <!-- ============================================================== -->
        <!-- Top header  -->
        <!-- ============================================================== -->
        <div class="topbar tp-rlt" id="top">
            <div class="header light">
                <div class="container po-relative">
                    <nav class="navbar navbar-expand-lg header-nav-bar">
                        <a href="index-2.html" class="navbar-brand">
                            Recipyyy
                            <img src="~/Content/img/WebsiteLogo.png" alt="Site Logo" style="height:50px; width: 50px" />
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation"><span class="ti-align-right"></span></button>
                        <div class="collapse navbar-collapse hover-dropdown font-14 ml-auto" id="navigation">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item dropdown">

                                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = " nav-link  m-0 mr-4 ml-4" })
                                    
                                </li>

                                <li class="nav-item dropdown">
                                    @Html.ActionLink("Recipes", "Index", "Recipes", null, new { @class = " nav-link  m-0 mr-4 ml-4" })
                                    
                                </li>

                                <li class="nav-item dropdown">
                                    @Html.ActionLink("Cuisines", "Index", "Cuisines", null, new { @class = " nav-link  m-0 mr-4 ml-4" })
                                    
                                </li>

                                <li class="nav-item dropdown">
                                    @Html.ActionLink("Chefs", "Index", "Chefs", null, new { @class = " nav-link  m-0 mr-4 ml-4" })
                                    
                                </li>

                            </ul>
                            @Html.Partial("_LoginPartial")
                            
                        </div>
                    </nav>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <!-- ============================================================== -->
        <!-- Top header  -->
        <!-- ============================================================== -->

        @RenderBody()

        <!-- ============================ Footer Start ================================== -->
        <footer class="dark-footer skin-dark-footer">
            <div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-3 col-md-6">
                            <div class="footer-widget">
                                <h4 class="widget-title">About Recipyyy</h4>
                                <p>We are a team of 3 students aimed to provide solutions to society needs by harnessing the power of technologies.</p>

                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="footer-widget">
                                <h4 class="widget-title">Useful links</h4>
                                <ul class="footer-menu">
                                    <li><a href="#">Home</a></li>
                                    <li><a href="#">Recipe</a></li>
                                    <li><a href="#">Cusine</a></li>
                                    <li><a href="#">Chef</a></li>
                                    <li><a href="#">Privacy Policy</a></li>
                                </ul>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6">
                            <div class="footer-widget">
                                <h4 class="widget-title">Contact Us</h4>
                                <ul class="footer-menu">
                                    <li><a href="#"><i class="ti-location-pin"> </i>Sudarshan Dairy, Nadiad</a></li>
                                    <li><a href="#"><i class="ti-world"> </i>Recipyyy.in</a></li>
                                    <li><a href="#"><i class="ti-email"> </i>info@recipyyy.in</a></li>
                                    <li><a href="#"><i class="ti-mobile"> </i>+91 8849236413</a></li>
                                </ul>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6">
                            <div class="footer-widget">
                                <h4 class="widget-title">Follow Us</h4>
                                <ul class="footer-menu">
                                    <li><a href="#"><i class="ti-instagram"> </i>Instagram</a></li>
                                    <li><a href="#"><i class="ti-facebook"> </i>Facebook</a></li>
                                    <li><a href="#"><i class="ti-twitter"> </i>Twitter</a></li>
                                    <li><a href="#"><i class="ti-google"> </i>Google+</a></li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="footer-bottom">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-12 col-md-12 text-center">
                            <p class="mb-0">©2019 recipe Tech, Nadiad. All Rights Reserved</p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- ============================ Footer End ================================== -->


    </div>
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->

    
        
    




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- November Edit-->
    @Scripts.Render("~/bundles/themeCustomScriptsBundle")


    @RenderSection("scripts", required: false)
</body>
</html>
