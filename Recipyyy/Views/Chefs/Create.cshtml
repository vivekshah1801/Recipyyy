@model Recipyyy.Models.Chef

@{
    ViewBag.Title = "Create";
}

<!-- ============================ Register ================================== -->
<section id="registerForm">
    <div class="container col-md-8 form-horizontal">
        @using (Html.BeginForm("Create", "Chefs", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <h4 class="modal-header-title">Register <span>Step 1</span></h4>

            <div class="login-form">
                
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label>User Display Name</label>
                        <div class="input-with-icon">
                            @Html.TextBoxFor(m => m.chefName, new { @class = "form-control", required = "required" })
                            <i class="ti-user"></i>
                            @Html.ValidationMessageFor(m => m.chefName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>User Bio</label>
                        <div class="input-with-icon">
                            @Html.TextBoxFor(m => m.chefBio, new { @class = "form-control", required = "required" })
                            <i class="ti-pencil"></i>
                        </div>
                        @Html.ValidationMessageFor(m => m.chefBio, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        
                        <div class="checkbox py-3">
                            @Html.EditorFor(model => model.chefTipsEnable)
                            Subscribe to Daily Health Tips    
                        </div>
                        @Html.ValidationMessageFor(model => model.chefTipsEnable, "", new { @class = "text-danger" })
                        
                    </div>

                    <div class="form-group">
                        <label>Upload your user display photo</label>
                        <div class="col-md-12">
                            <input class="custom-file-input" type="file" name="chefImageFile" />
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        @Html.ValidationMessageFor(model => model.chefImagePath, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group pt-3">
                          <button type="submit" value="Create" class="btn btn-primary btn-block">Register</button>
                    </div>
                
            </div>

        }

            <div class="pl-3">
                @Html.ActionLink("Back", "Index", null ,new { @class="btn btn-secondary"})
            </div>
    </div>
</section>
<!-- ============================ Register end================================== -->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
